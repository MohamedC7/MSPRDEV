<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">

    <ImageView
        android:layout_height="300dp"
        android:layout_width="500dp"
        android:layout_gravity="center"
        android:id="@+id/thisImageView"
        android:src="@drawable/icone"
        android:contentDescription="@string/camerahome"
        android:layout_marginRight="5.0dp"
        android:layout_marginLeft="6.0dp"
        android:layout_marginTop="0.0dp"
        android:layout_marginBottom="45.0dp" 
	/>

    <Button
        android:id="@+id/captureButton"
        android:layout_height="40dp"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/captureButton"
        android:layout_margin="50dp"
        android:layout_marginBottom="10.0dp"
        android:layout_marginTop="11.5dp" 
	/>

    <Button
		android:id="@+id/uploadButton"
		android:layout_height="40dp"
		android:layout_width="200dp"
		android:layout_gravity="center_horizontal"
		android:text="@string/uploadButton"
		android:layout_margin="10dp"
	/>

</LinearLayout>
